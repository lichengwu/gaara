<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>gaara</display-name>
	<description>gaara display</description>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>gaara</param-value>
	</context-param>

	<context-param>
		<param-name>storage_directory</param-name>
		<param-value>E:\temp\gaara\server</param-value>
	</context-param>
	<context-param>
		<param-name>gaara.run.mode</param-name>
		<param-value>server</param-value>
	</context-param>
	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.meituan.gaara.web.servlet.TestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MonitoringServlet</servlet-name>
		<servlet-class>com.meituan.gaara.web.servlet.MonitoringServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>GraphServeltTest</servlet-name>
		<servlet-class>com.meituan.gaara.web.servlet.GraphServeltTest</servlet-class>
	</servlet>



	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MonitoringServlet</servlet-name>
		<url-pattern>/monitoring</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GraphServeltTest</servlet-name>
		<url-pattern>/servlet/GraphServeltTest</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
